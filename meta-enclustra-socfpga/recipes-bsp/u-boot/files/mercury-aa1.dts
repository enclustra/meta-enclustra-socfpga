/dts-v1/;
#include "socfpga_arria10.dtsi"
#include "socfpga_arria10-u-boot.dtsi"
#include "socfpga_arria10_socdk_qspi_handoff.h"
#include "socfpga_arria10-handoff.dtsi"
#include "socfpga_arria10_handoff_u-boot.dtsi"

/ {

	model = "Mercury+ AA1";
	compatible = "altr,socfpga-arria10", "altr,socfpga";

	aliases {
		serial0 = &uart1;
		spi0 = &qspi;
		i2c0 = &i2c1;
	};

	chosen {
		stdout-path = "serial0:115200n8";
	};

	memory@0 {
		name = "memory";
		device_type = "memory";
		reg = <0x0 0x80000000>; /* 2GB */
	};

	soc {
		clkmgr@ffd04000 {
			clocks {
				osc1 {
					clock-frequency = <33330000>;
				};
			};
		};
	};

	fs_loader0: fs-loader {
		u-boot,dm-pre-reloc;
		compatible = "u-boot,fs-loader";
		sfconfig = <0 0 50000000 3>;
	};
};

&fpga_mgr {
	u-boot,dm-pre-reloc;
	firmware-loader = <&fs_loader0>;
	altr,bitstream = "300000";
};

&l4_main_clk {
	u-boot,dm-pre-reloc;
};

&qspi_clk {
	u-boot,dm-pre-reloc;
};

&uart1 {
	u-boot,dm-pre-reloc;
	status = "okay";
};

&i2c1 {
	/* Max value set according to HW spec */
	i2c-scl-falling-time-ns = <300>;
	status = "okay";
};

&mmc {
	u-boot,dm-pre-reloc;
	status = "okay";
};

&qspi {
	u-boot,dm-pre-reloc;
	status = "okay";

	flash0: s25fl512s@0 {
		u-boot,dm-pre-reloc;
		#address-cells = <1>;
		#size-cells = <1>;
		compatible = "spansion,s25fl512s", "jedec,spi-nor";
		reg = <0>;
		spi-max-frequency = <25000000>;

		page-size = <256>;
		block-size = <16>; /* 2^16, 64KB */
		cdns,page-size = <256>;
		cdns,block-size = <16>;
		cdns,tshsl-ns = <200>;
		cdns,tsd2d-ns = <255>;
		cdns,tchsh-ns = <20>;
		cdns,tslch-ns = <20>;
	};
};

&watchdog1 {
	u-boot,dm-pre-reloc;
	status = "okay";
};